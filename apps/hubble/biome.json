{
  "$schema": "../../node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 120,
    "ignore": ["src/abstract-leveldown.d.ts", "src/rocksdb.d.ts", "src/addon/*"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off",
        "noBannedTypes": "off",
        "useLiteralKeys": "off",
        "noThisInStatic": "off",
        "noStaticOnlyClass": "off"
      },
      "suspicious":{
        "noExplicitAny": "off",
        "noExportsInTest": "off",
        "noImplicitAnyLet": "off",
        "noDuplicateTestHooks": "off"
      },
      "style": {
        "noUselessElse": "off"
      }
    },
    "ignore": ["src/abstract-leveldown.d.ts", "src/rocksdb.d.ts", "src/addon/*"]
  }
}
