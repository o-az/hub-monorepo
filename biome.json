{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": false
  },
  "json": {
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 120,
    "ignore": [
      "src/abstract-leveldown.d.ts",
      "src/rocksdb.d.ts",
      "packages/core/src/protobufs/generated/*",
      "packages/hub-nodejs/src/generated/*",
      "packages/hub-web/src/generated/*",
      "migrations/*"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off",
        "useLiteralKeys": "off",
        "noThisInStatic": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "noUselessElse": "off"
      }
    },
    "ignore": [
      "src/abstract-leveldown.d.ts",
      "src/rocksdb.d.ts",
      "packages/core/src/protobufs/generated/*",
      "packages/hub-nodejs/src/generated/*",
      "packages/hub-web/src/generated/*"
    ]
  }
}
